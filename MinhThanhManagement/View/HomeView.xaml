                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Height="40" Style="{DynamicResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="HomeVariant" Style="{DynamicResource menuIconButton}"/>
                                <TextBlock Text="Kho"></TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="1" Margin="10 5" Style="{DynamicResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="History" Style="{DynamicResource menuIconButton}"/>
                                <TextBlock Text="Lịch sử"></TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="2" Margin="10 5" Style="{DynamicResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="Note" Style="{DynamicResource menuIconButton}"/>
                                <TextBlock Text="Ghi chú"></TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="3" Margin="10 5" Style="{DynamicResource menuButton}">
                            <StackPanel Orientation="Horizontal">
                                <Icon:PackIconMaterial Kind="PaperRollOutline" Style="{DynamicResource menuIconButton}"/>
                                <TextBlock Text="Hóa đơn"></TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="4" Style="{DynamicResource closeButton}" Background="Yellow" HorizontalAlignment="Right" Click="minimizeApp">
                            <StackPanel>
                                <Icon:PackIconMaterial Kind="Minus" Foreground="Black" Width="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="5" Style="{DynamicResource closeButton}" Background="Red" HorizontalAlignment="Center" Click="closeApp">
                            <StackPanel>
                                <Icon:PackIconMaterial Kind="Close" Foreground="Black" Width="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                </Grid>
            </Border>
            
            <!--Filter-->
            <Grid Grid.Row="1" >
                

                <Grid Width="500" HorizontalAlignment="Center">
                    <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                               Panel.ZIndex="1" Text="Tìm kiếm ..." Visibility="{Binding ElementName=txtSearch, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBox x:Name="txtSearch" Style="{DynamicResource textboxSearch}"/>
                    <Icon:PackIconMaterial Kind="Magnify" Width="25" Height="25" VerticalAlignment="Center" Margin="0 0 15 0" Foreground="#b0b9c6"
                                           HorizontalAlignment="Right"/>
                </Grid>

