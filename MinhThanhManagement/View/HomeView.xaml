            </Grid>
            <!--Data-->
            <Grid Grid.Row="2" Margin="50, 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        
                        <TextBlock Text="QUẢN LÝ KHO" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        
